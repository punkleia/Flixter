<br />

<div class="booyah-box col-10 offset-1">
  <div class="bg-color">
    <h1 class="pull-right">What I'm Learning</h1>
  </div>
  <hr class="style2">
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="pull-left"><%= link_to course.title, course_path(course) %></h3>
    <br class="clr" />
    <br />
    <div class="text-center">
      <%= image_tag course.picture, class: "img-fluid" %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info", course_path(course), class: "btn btn-sm btn-primary" %>
      </div>
    </div>
    <hr class="style2">
    <br class="clr" />
  <% end %>

  <div class="bg-color">
    <h1 class="pull-right">What I'm Teaching</h1>
  </div>
  <hr class="style2">
  <br />
  <% current_user.courses.each do |course| %>
    <h3 class="pull-left">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br class="clr" />
    <br />
    <div class="text-center">
      <%= image_tag course.picture, class: "img-fluid" %>
    </div>
    <br />
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>

      <div class="col-12 col-sm-4 text-center">
        <%= link_to "More Info", course_path(course), class: "btn btn-sm btn-primary" %>
      </div>
    </div>
    <hr class="style2">
    <br class="clr" />
  <% end %>
</div>
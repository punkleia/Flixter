<br />
<div class="booyah-box col-10 offset-1 new-font">
  <div class="bg-color">
    <h1 class="pull-right">Add a New Course</h1>
  </div>
 
    <%= simple_form_for @course, url: instructor_courses_path do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :cost %>
      <%= f.input :picture %>
      <br />
      <%= f.submit "Create", class: "btn btn-primary pull-right" %>
      <br />
    <% end %>
 
  <br />
</div>
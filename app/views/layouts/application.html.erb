<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.16.0/video-js.css" rel="stylesheet">

  </head>

  <body>
    <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
   <!--  <div class="navbar-header"> -->
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to "Flixter", root_url, class: "navbar-brand" %>
    
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to "See All Courses", courses_path %>
          </li>
        </ul>
<!--         <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
        </ul>
      </div>
    </nav> -->
        <!-- <ul class="navbar-nav mr-auto mt-2 mt-md-0"> -->
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "My Dashboard", dashboard_path %> 
            </li>
            <li class="nav-item">
              <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
 <!--        </nav>
      </div> -->
    


    
  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <%= yield %>
  
  </div>

    <div id="footer">   
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to "Teach a Course", new_instructor_course_path %>
            <br />
            <%= link_to "My Dashboard", dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to "Team", "#" %>
            <br />
            <%= link_to "Careers", "#" %>
            <br />
            <%= link_to "Privacy Policy", "#" %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            theatrejawa@gmail.com
            <br />
            One Kendall Square
            <br />
            Cambridge, MA 02113
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to "http://github.com/punkleia" do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to "https://twitter.com/theatrejawa" do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
            <%= link_to "https://www.instagram.com/theatrejawa/" do %>
              <span class="fa fa-instagram fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- the video links need to be at the bottom, otherwise turbolinks will cause trouble -->
    <script src="http://vjs.zencdn.net/5.16.0/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>

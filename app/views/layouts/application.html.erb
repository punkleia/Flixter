<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.16.0/video-js.css" rel="stylesheet">

  </head>

  <body>
    <div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
   <!--  <div class="navbar-header"> -->
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <a class="navbar-brand" href="#">Flixter</a>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav mr-auto mt-2 mt-md-0">
            <li class="nav-item login">
              <a class="nav-link">
                <%= link_to "See All Courses", courses_path %>
              </a>
            </li>
          </ul>

        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item login">
              <a class="nav-link">
                <%= link_to "My Dashboard", dashboard_path %> 
              </a>
            </li>
            <li class="nav-item login">
              <a class="nav-link">
                <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
              </a>
            </li>
          <% else %>
            <li class="nav-item login">
              <a class="nav-link">
               <%= link_to "Sign in", new_user_session_path %>
              </a>
            </li>
            <li class="nav-item login">
              <a class="nav-link">
                <%= link_to "Sign up", new_user_registration_path %>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
 
    
  <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

    <%= yield %>
  
  </div>

    <div id="footer">   
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br />
            <%= link_to "Teach a Course", new_instructor_course_path %>
            <br />
            <%= link_to "My Dashboard", dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to "Team", team_path %>
            <br />
            <%= link_to "Careers", careers_path %>
            <br />
            <%= link_to "Privacy Policy", privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            theatrejawa@gmail.com
            <br />
            One Kendall Square
            <br />
            Cambridge, MA 02113
          </div>
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to "http://github.com/punkleia" do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
            <% end %>
            <%= link_to "https://twitter.com/theatrejawa" do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
            <% end %>
            <%= link_to "https://www.instagram.com/theatrejawa/" do %>
              <span class="fa fa-instagram fa-2x social-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <!-- the video links need to be at the bottom, otherwise turbolinks will cause trouble -->
    <script src="http://vjs.zencdn.net/5.16.0/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
